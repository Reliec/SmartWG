<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingListOverviewActivity"
    android:background="@drawable/app_background"
    >

    <ImageView
        android:id="@+id/shoppingCartIconInstance"
        android:layout_width="52dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/app_background"
        android:src="@drawable/ic_baseline_shopping_basket_24"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewShoppingListItems"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@+id/tvShoppingListTitle" />

    <Button
        android:id="@+id/bCreateNewShoppingListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/button_background"
        android:padding="1dp"
        android:text="@string/Plus"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoppingCartIconInstance"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/tvShoppingListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shoppingListTitle"
        android:textColor="#FAF7F7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewShoppingListItems"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewShoppingListItems"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewShoppingListItems"
        android:layout_width="324dp"
        android:layout_height="494dp"
        app:layout_constraintBottom_toTopOf="@+id/bCreateNewShoppingListItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/vEditShoppingList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:padding="3dp"
        android:src="@drawable/ic_baseline_edit_24"
        android:translationZ="90dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewShoppingListItems"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewShoppingListItems"
        app:layout_constraintStart_toEndOf="@+id/shoppingCartIconInstance" />

    <ImageView
        android:id="@+id/vConfirmShoppingListChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:padding="3dp"
        android:src="@drawable/ic_baseline_check_24"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00FFFFFF"
        android:translationZ="90dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewShoppingListItems"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewShoppingListItems"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewShoppingListItems" />
</androidx.constraintlayout.widget.ConstraintLayout>