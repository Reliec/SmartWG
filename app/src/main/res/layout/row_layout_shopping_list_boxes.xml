<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:padding="3dp"
        android:text="@string/author"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ShoppingListView"
        app:layout_constraintEnd_toEndOf="@+id/ShoppingListView"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/ShoppingListView"
        app:layout_constraintTop_toTopOf="@+id/ShoppingListView"
        app:layout_constraintVertical_bias="0.74" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:padding="3dp"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tvAuthor"
        app:layout_constraintEnd_toEndOf="@+id/ShoppingListView"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/ShoppingListView"
        app:layout_constraintTop_toTopOf="@+id/ShoppingListView" />

    <TextView
        android:id="@+id/tvLastEdited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:padding="3dp"
        android:text="@string/lastEdited"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ShoppingListView"
        app:layout_constraintEnd_toEndOf="@+id/ShoppingListView"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="@+id/ShoppingListView"
        app:layout_constraintTop_toTopOf="@+id/ShoppingListView"
        app:layout_constraintVertical_bias="0.74" />

</RelativeLayout>