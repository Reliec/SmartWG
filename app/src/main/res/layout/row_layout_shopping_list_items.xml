<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_background"
    android:visibility="visible">


    <androidx.cardview.widget.CardView
        android:id="@+id/ShoppingListItemView"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        app:cardBackgroundColor="#49876D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/tvItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:inputType="none"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="3dp"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/ShoppingListItemView"
        app:layout_constraintEnd_toEndOf="@+id/ShoppingListItemView"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/ShoppingListItemView"
        app:layout_constraintTop_toTopOf="@+id/ShoppingListItemView"
        tools:ignore="Autofill,LabelFor" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="47dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ShoppingListItemView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvItemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Amount"
        android:textSize="18sp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/ShoppingListItemView"
        app:layout_constraintEnd_toEndOf="@+id/ShoppingListItemView"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="@+id/ShoppingListItemView"
        app:layout_constraintTop_toTopOf="@+id/ShoppingListItemView" />

    <TextView
        android:id="@+id/tvItemUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Unit"
        android:textSize="18sp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/tvItemAmount"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>